{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "",
  "Metadata": {},
  "Parameters": {
    "BastionAMIId": {
      "Description": "ami",
      "Type": "String",
      "Default": "ami-0dba2cb6798deb6d8"
    },

    "BastionPemKeyId": {
      "Description": "the id for ssh the bastions",
      "Type": "String",
      "Default": "bastionkp"
    },

    "ALBSGID": {
      "Description": "Security group for the alb",
      "Type": "String",
      "Default": "sg-0cd4ceec7ccaa12b1"
    },

    "BastionSGId": {
      "Description": "Bastion SG Id",
      "Type": "String",
      "Default": "sg-0412dbc2e96e208c1"
    },

    "SubnetAId": {
      "Description": "-",
      "Type": "String",
      "Default": "subnet-0ee623f5e196c0dee"
    },

    "SubnetBId": {
      "Description": "-",
      "Type": "String",
      "Default": "subnet-0155a33b36dbc58e2"
    },

    "VPC": {
      "Description": "-",
      "Type": "String",
      "Default": "vpc-05ef357dae3f5d7a9"
    }
  },
  "Mappings": {},
  "Conditions": {},
  "Resources": {
    "BastionASG": {
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "Properties": {
        "LaunchTemplate": {
          "LaunchTemplateId": { "Ref": "BastionlaunchTemplate" },
          "Version": 1
        },
        "MaxSize": "1",
        "MinSize": "1",
        "HealthCheckGracePeriod": 30,
        "HealthCheckType": "EC2",
        "VPCZoneIdentifier": [{ "Ref": "SubnetAId" }, { "Ref": "SubnetBId" }]
      }
    },
    "BastionlaunchTemplate": {
      "Type": "AWS::EC2::LaunchTemplate",
      "Properties": {
        "LaunchTemplateName": "BastionDevTemplate",
        "LaunchTemplateData": {
          "ImageId": { "Ref": "BastionAMIId" },
          "InstanceInitiatedShutdownBehavior": "terminate",

          "InstanceType": "t3.micro",

          "KeyName": { "Ref": "BastionPemKeyId" },
          "NetworkInterfaces": [],

          "SecurityGroupIds": [{ "Ref": "BastionSGId" }]
        }
      }
    }
  },
  "Outputs": {}
}
